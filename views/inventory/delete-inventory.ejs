<h1><%= title %></h1>

<p class="warning">
  Are you sure you want to delete this inventory item? 
  <strong>This action CAN NOT be undone.</strong>
</p>

<form action="/inv/delete" method="POST">
  <input type="hidden" name="inv_id" value="<%= inventory.inv_id %>">

  <label>Make:
    <input type="text" value="<%= inventory.inv_make %>" readonly>
  </label><br><br>

  <label>Model:
    <input type="text" value="<%= inventory.inv_model %>" readonly>
  </label><br><br>

  <label>Year:
    <input type="text" value="<%= inventory.inv_year %>" readonly>
  </label><br><br>

  <button type="submit" class="danger">
    Delete Vehicle
  </button>
</form>

<% messages() %>
