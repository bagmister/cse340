<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>
      
<form id="addClassificationForm" action="/inv/add-classification" method="POST">
    <label for="classification_name">New classification name:
        <input type="text" id="classification_name" name="classification_name" required pattern="[A-Za-z]+" placeholder="Enter the new classification name" value="<%= formData.classification_name || '' %>" novalidate>
    </label><br><br>

  <button type="submit">Add classification</button>
</form>
<% messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>