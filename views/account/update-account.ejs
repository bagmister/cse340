<h1><%= title %></h1>

<form action="/account/update-account" method="POST">

  <label for="account_firstname">First name:
    <input 
      type="text" 
      id="account_firstname" 
      name="account_firstname"
      value="<%= accountData.account_firstname %>"
    >
  </label>
  <br><br>

  <label for="account_lastname">Last name:
    <input 
      type="text" 
      id="account_lastname" 
      name="account_lastname"
      value="<%= accountData.account_lastname %>"
    >
  </label>
  <br><br>

  <label for="account_email">Email:
    <input 
      type="email" 
      id="account_email" 
      name="account_email"
      value="<%= accountData.account_email %>"
    >
  </label>
  <br><br>

  <label for="account_password">New Password:
    <span>Leave blank if you do not want to change it</span>
    <input 
      type="password" 
      id="account_password" 
      name="account_password"
      minlength="12"
    >
  </label>
  <br><br>

  <button type="submit">Update Account</button>
</form>

<% messages() %>
